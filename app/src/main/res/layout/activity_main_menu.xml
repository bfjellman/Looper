

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iinspirestudios.looperapp2.MainMenu"
    android:background="@drawable/mainmenu">

    <ImageButton
        android:background="@drawable/newsong"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:text="@string/main_menu_create"
        android:id="@+id/createSong_Btn_ID"
        android:onClick="createSong_onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


            <ImageButton
                android:background="@drawable/load"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:text="@string/main_menu_load"
                android:id="@+id/load_Btn_ID"
                android:onClick="loadSong_onClick"
                android:layout_alignTop="@+id/share_Song_Btn_ID"
                android:layout_toRightOf="@+id/share_Song_Btn_ID"
                android:layout_toEndOf="@+id/share_Song_Btn_ID" />

            <ImageButton
                android:background="@drawable/share"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:text="@string/main_menu_share"
                android:id="@+id/share_Song_Btn_ID"
                android:onClick="shareSong_onClick"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/createSong_Btn_ID"
                android:layout_toEndOf="@+id/createSong_Btn_ID" />

            <ImageButton
                android:background="@drawable/logout"
                android:layout_width="155dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:text="@string/main_menu_logout"
                android:id="@+id/guest_logout"
                android:onClick="logout"
                android:layout_above="@+id/main_menu_userID"
                android:layout_centerInParent="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/main_menu_userID"
        android:text="UserID"
        />


</RelativeLayout>
