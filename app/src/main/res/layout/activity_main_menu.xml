<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iinspirestudios.looperapp2.MainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_menu_title"
        android:id="@+id/textView_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_create"
        android:id="@+id/createSong_Btn_ID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="createSong_onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_load"
        android:id="@+id/load_Btn_ID"
        android:layout_below="@+id/createSong_Btn_ID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="loadSong_onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_share"
        android:id="@+id/share_Song_Btn_ID"
        android:layout_below="@+id/load_Btn_ID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="shareSong_onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_logout"
        android:id="@+id/guest_logout"
        android:layout_below="@+id/share_Song_Btn_ID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="guestLogout" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/testBox"
        android:layout_height="match_parent"
        android:layout_below="@id/guest_logout"
        android:text="Hello"

        />


</RelativeLayout>
