<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.mckayscience.looper.CreateSongActivity"
    android:orientation="vertical"
    android:background="#495965">




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:id="@+id/song_name_okbtn"
        android:text="@string/song_name_okbtn"
        android:onClick="newSong"
        android:layout_gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:id="@+id/song_name_cancelbtn"
        android:text="@string/song_name_cancelbtn"
        android:onClick="cancelNew"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/song_name_edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/song_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
        android:hint="@string/song_name_edit"
        android:layout_weight="1"
        android:background="#e3ffef"
        android:textSize="24dp"
        android:layout_above="@+id/song_name_okbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/song_name_text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/song_name_cancelbtn"
        android:layout_toStartOf="@+id/song_name_cancelbtn"
        android:layout_marginRight="133dp"
        android:layout_marginEnd="133dp"
        android:layout_marginTop="73dp" />


</RelativeLayout>
